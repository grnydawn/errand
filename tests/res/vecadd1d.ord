[signature: x, y -> z]

[cuda, hip]

	int id = blockDim.x * blockIdx.x + threadIdx.x;
	if(id < x.size()) z(id) = x(id) + y(id);

[pthread-c++]
	
	int id = ERRAND_GOFER_ID;
	z(id) = x(id) + y(id);

[openacc-c++]

	#pragma acc loop gang worker vector
	for (int id = 0; id < x.shape(0); id++) {
		z(id) = x(id) + y(id);
	}

[c++]

	for (int id = 0; id < x.shape(0); id++) {
		z(id) = x(id) + y(id);
	}

[fortran]

    INTEGER id

	DO id=1, x_attr%shape(1)
		z(id) = x(id) + y(id)
	END DO

[pthread-fortran]
	
	!integer :: id = ERRAND_GOFER_ID
	integer :: id

    id = ERRAND_GOFER_ID
	z(id) = x(id) + y(id)

